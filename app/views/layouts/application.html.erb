<!DOCTYPE html>
<html>
<head>
  <title>News Reader</title>
  <%= stylesheet_link_tag    "application", :media => "all" %>
  <%= javascript_include_tag "application" %>
  <%= csrf_meta_tags %>
</head>
<body>

<div class="navbar">
  <% if logged_in? %>
    <%= current_user.username %>
    <%= button_to "Log out", session_url, method: :delete %>
  <% else %>
    <%= link_to "Sign up", new_user_url, method: :get %> or
    <%= link_to "Sign in", new_session_url, method: :get %>
  <% end %>


</div>

<%= yield %>

<div id="main">

</div>


</body>
</html>
